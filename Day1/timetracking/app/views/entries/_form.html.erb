<%= flash_message %>

<% if @entry.errors.any?  %>
  <ul>
    <% @entry.errors.full_messages.each do |error_msg| %>
    <li><%= error_msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@project, @entry] do |f| %>
  <div>
    <%= f.label :hours %>
    <%= f.text_field :hours %>
  </div>
  <div>
    <%= f.label :minutes %>
    <%= f.text_field :minutes %>
  </div>
  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>
  <%= f.submit 'Save' %>


<% end %>
<%= link_to('Cancel', project_entries_path(@project)) %>
